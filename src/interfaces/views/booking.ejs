<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Stadium | QuickKick</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/nav.css" />
    <link rel="stylesheet" href="/css/booking.css" />
  </head>
  <body>
    <!-- Navbar -->
    <div class="nav"><%- include('partials/navbar') %></div>

    <!-- Hero Section -->
    <section class="booking-hero text-center">
      <div class="container">
        <h1 class="display-4 fw-bold mb-4">Book Your Stadium</h1>
        <p class="lead">
          Reserve your perfect playing field in just a few clicks
        </p>
      </div>
    </section>

    <!-- Main Booking Section -->
    <section class="container mb-5">
      <div class="row g-4">
        <!-- Stadium Info -->
        <div class="col-lg-8">
          <div class="booking-card p-4 p-lg-5 bg-white mb-4">
            <div class="row align-items-center">
              <div class="col-md-4 mb-3 mb-md-0">
                <img
                  src="/assets/images/image.webp"
                  alt="City Sports Complex"
                  class="img-fluid stadium-image w-100"
                />
              </div>
              <div class="col-md-8">
                <h2>City Sports Complex</h2>
                <div class="d-flex align-items-center mb-3">
                  <i class="fas fa-map-marker-alt text-success me-2"></i>
                  <span>789 Sports Blvd, Birmingham</span>
                </div>
                <div class="d-flex flex-wrap gap-2 mb-3">
                  <span class="badge bg-light text-dark"
                    ><i class="fas fa-users me-1"></i> 22 players</span
                  >
                  <span class="badge bg-light text-dark"
                    ><i class="fas fa-grass me-1"></i> Artificial turf</span
                  >
                  <span class="badge bg-light text-dark"
                    ><i class="fas fa-shower me-1"></i> Showers</span
                  >
                  <span class="badge bg-light text-dark"
                    ><i class="fas fa-car me-1"></i> Parking</span
                  >
                </div>
                <p>
                  Professional-grade football pitch with premium amenities
                  including changing rooms, floodlights, and spectator seating.
                </p>
              </div>
            </div>
          </div>

          <!-- Date Picker -->
          <div class="booking-card p-4 p-lg-5 bg-white mb-4">
            <h3 class="mb-4">Select Date</h3>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <button id="prevWeek" class="btn btn-outline-success">
                <i class="fas fa-chevron-left me-2"></i>Previous Week
              </button>
              <h4 class="mb-0" id="currentWeekRange">May 12 - May 18, 2025</h4>
              <button id="nextWeek" class="btn btn-outline-success">
                Next Week<i class="fas fa-chevron-right ms-2"></i>
              </button>
            </div>

            <div class="row g-2" id="dateSelection">
              <!-- Weeks will be dynamically generated here -->
            </div>
          </div>

          <!-- Time Slots -->
          <div class="booking-card p-4 p-lg-5 bg-white">
            <h3 class="mb-4">Available Time Slots</h3>
            <div class="row g-3" id="timeSlots">
              <!-- Morning Slots -->
              <div class="col-md-6">
                <div class="time-slot">
                  <div class="d-flex justify-content-between">
                    <span class="fw-bold">Morning</span>
                    <span class="text-success">$90/hr</span>
                  </div>
                  <div class="time-range">8:00 AM - 10:00 AM</div>
                  <div class="availability text-muted">4 slots left</div>
                </div>
              </div>
              <!-- More slots... -->
            </div>
          </div>
        </div>

        <!-- Booking Summary -->
        <div class="col-lg-4">
          <div
            class="booking-card p-4 p-lg-5 bg-white sticky-top"
            style="top: 20px"
          >
            <h3 class="mb-4">Your Booking</h3>

            <div class="alert alert-success d-none" id="bookingAlert">
              <i class="fas fa-check-circle me-2"></i> Date & time selected!
            </div>

            <div class="mb-4">
              <h5>Selected Stadium</h5>
              <div class="d-flex align-items-center">
                <img
                  src="/assets/images/image.webp"
                  alt="Stadium"
                  width="60"
                  class="rounded me-3"
                />
                <div>
                  <div class="fw-bold">City Sports Complex</div>
                  <small class="text-muted">Birmingham</small>
                </div>
              </div>
            </div>

            <div class="mb-4">
              <h5>Selected Date & Time</h5>
              <div id="selectedDateTime" class="text-muted">
                Not selected yet
              </div>
            </div>

            <div class="mb-4">
              <h5>Pricing</h5>
              <table class="w-100">
                <tr>
                  <td>Base Price (2 hrs)</td>
                  <td class="text-end">$180</td>
                </tr>
                <tr>
                  <td>Lights Fee</td>
                  <td class="text-end">$20</td>
                </tr>
                <tr class="border-top">
                  <td class="pt-2 fw-bold">Total</td>
                  <td class="pt-2 text-end fw-bold">$200</td>
                </tr>
              </table>
            </div>

            <button
              id="checkoutBtn"
              class="btn btn-success w-100 py-3"
              disabled
            >
              <i class="fas fa-lock me-2"></i>Proceed to Payment
            </button>

            <div class="mt-4 text-center">
              <small class="text-muted">
                <i class="fas fa-shield-alt me-2"></i>Secure booking process
              </small>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Stadium Features -->
    <section class="container mb-5">
      <div class="booking-card p-4 p-lg-5 bg-white">
        <h3 class="mb-4">Stadium Features</h3>
        <div class="row g-4">
          <div class="col-md-6">
            <div class="d-flex">
              <div class="text-success me-3">
                <i class="fas fa-check-circle fa-2x"></i>
              </div>
              <div>
                <h5>Premium Turf</h5>
                <p class="text-muted">
                  FIFA-certified artificial grass for optimal performance and
                  safety.
                </p>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-flex">
              <div class="text-success me-3">
                <i class="fas fa-check-circle fa-2x"></i>
              </div>
              <div>
                <h5>Floodlights</h5>
                <p class="text-muted">
                  Professional lighting for evening matches (additional fee
                  applies).
                </p>
              </div>
            </div>
          </div>
          <!-- More features... -->
        </div>
      </div>
    </section>

    <!-- Footer -->
    <div class="footer"><%- include('partials/footer') %></div>

    <script src="/js/booking.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
