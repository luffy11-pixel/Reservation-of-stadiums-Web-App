<head>
  <!-- Ensure the correct path to the CSS file -->
  <!--css file -->
  <link rel="stylesheet" href="/css/nav.css" />
  <!--css normalize file-->
  <link rel="stylesheet" href="/css/normalize.css" />
  <!--icons-->
  <link rel="stylesheet" href="/css/all.min.css" />
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
  />
  <!--font-->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet"
  />
</head>
<div class="header">
  <div class="container">
    <div class="logo none">
      <a href="/">
        <h2><i class="fa-solid fa-futbol none logo-icon"></i>Quick Kick</h2>
      </a>
    </div>
    <div class="nav">
      <i class="fa-solid fa-bars fa-xl bar"></i>
      <ul>
        <li>
          <a class="<%= page === 'home' ? 'active' : '' %>" href="/">Home</a>
        </li>
        <li>
          <a class="<%= page === 'stadiums' ? 'active' : '' %>" href="/stadiums"
            >Stadiums</a
          >
        </li>
        <li>
          <a class="<%= page === 'About' ? 'active' : '' %>" href="/About"
            >About</a
          >
        </li>
        <li>
          <a
            class="<%= page === 'Contact-Us' ? 'active' : '' %>"
            href="/Contact-Us"
            >Contact Us</a
          >
        </li>
      </ul>
    </div>
    <div class="searsh-bar">
      <div class="searsh">
        <i class="fas fa-search"></i>
      </div>
    </div>
    <div class="buttons">
      <button type="button" class="btn btn-outline-success">
        <a href="/login"><i class="bi bi-person-circle"></i> Log in</a>
      </button>
      <button type="button" class="btn btn-outline-success">
        <a class="<%= page === 'booking' ? 'active' : '' %>" href="/booking"
          >Book Now</a
        >
      </button>
    </div>
  </div>
</div>
